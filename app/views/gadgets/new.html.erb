<%= simple_form_for @gadget, html: {class: "form-horizontal"} do |f| %>
  <div class="control-group">
    <%= f.input :name %>
    <%= f.input :description, as: :text, input_html: {rows: 5} %>
    <%= f.input  :image, as: :file %>
  </div>
  <div class="control-group">  
    <%= f.submit t('.create_gadget'), class: 'btn btn-large' %>
  </div>
<% end %>
